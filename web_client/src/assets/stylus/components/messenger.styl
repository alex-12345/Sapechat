@import './window/messenger.styl'

#chats_list_wrapper
    width: 280px
    height: 100%
    border-right: #ccc 1px solid
    box-sizing: border-box
    position: fixed    
    margin-top: -50px
    padding-top: 100px

#chat_search
    position: absolute
    top: 50px
    vertical-align: top
    padding: 10px 20px
    form
        border: 1px solid #ccc
        background-color: #fafafa
        box-sizing: border-box
        height 30px
        width: 240px
        position: relative
        border-radius: 2px
    input[type=text]
        position: absolute
        border: none
        height 23px
        left: 10px
        top:2px
        outline: 0
        background: none
        font-family: $primary_font
        font-size: 14px
    button
        position: absolute
        top:4px
        right: 5px
        background: none
        border: none
        height 23px
        outline: none 
        cursor: pointer
        img 
            height 18px
#chat_list_content
    height: 100%
    overflow-y: auto
    overflow-x: hidden
    &::-webkit-scrollbar-button 
        display:none

    &::-webkit-scrollbar-track 
        background-color:#fff

    &::-webkit-scrollbar-thumb 
        -webkit-border-radius: 0px
        border-radius: 2px
        background-color:#ccc

    &::-webkit-scrollbar-thumb:hover 
        background-color:#4E596D

    &::-webkit-resizer 
        display:none

    &::-webkit-scrollbar
        width: 5px

.chat_element_wrapper
    position: relative
    box-sizing: border-box
    display: block
    height: 70px
    border-bottom: 1px solid #eee
    border-top: 1px solid #fff
    padding: 10px 5px 0 85px
    cursor: pointer
    &:hover
        background-color: #E8EBED
        border-top: 1px solid #E8EBED
        border-bottom: 1px solid #E8EBED
    .chat_element_name
        margin: 0px
        font-size: 14px
        text-decoration: none
        color: inherit
        font-weight: bold
    .last_msg
        margin-top: 5px
        font-size: 13px
    .last_msg_conf
        margin-top: 3px
        font-size: 13px
        position: relative
        .last_msg_user_img
            position: absolute
            top: 5px
            left: 0
            width: 25px
            border-radius: 50%
        span 
            position: absolute
            top: 10px
            left: 35px
            display: block


.chat_element_img_wrapper
    width: 50px
    height: 50px
    overflow: hidden
    border-radius: 50%
    position: absolute
    top: 10px
    left: 20px
    .chat_img
        width: 50px
        height: 50px
.image_half_left, .image_half_right
    width: 25px
    height: 50px
    overflow: hidden
    .chat_img
        margin-left: -12.5px
    .image_half_top
        width: 25px
        height: 25px
        overflow: hidden
        display: block
        .chat_img
            margin-top: -12.5px
    .image_half_bottom
        width: 25px
        height: 25px
        overflow: hidden
        display: block
        .chat_img
            margin-top: -12.5px
.image_half_left
    float: left
.image_half_right
    float: right
#load_chat
    margin-bottom: 0
    margin-top: 3px     

#chat_wrapper
    margin-left: 280px
    position: relative
    width: 760px
#chat_header_wrapper
    position: fixed
    height: 50px
    border-bottom: #eee 1px solid
    width: 760px
    background: #fdfdfd
    z-index: 1
#chat_options
    position: absolute
    top: 10px
    right: 10px
    background: none
    width 10px
    height 30px
    cursor:pointer
#chat_title
    text-align: center
    font-weight: bold
    font-size: 14px
    margin-top: 10px
    cursor: pointer
    margin-bottom: 2px
#chat_subtitle
    text-align: center
    font-size: 11px
    color:#666
    cursor: pointer

#chat_input_wrapper
    height 70px
    width: 760px
    position: fixed
    bottom: 0px
    #textarea_wrapper
        background: #fdfdfd
        border-top: #ddd 1px solid
        position: absolute
        bottom: 0;
        min-height: 10px;
        width: 760px
        padding: 10px 100px 10px 155px
        box-sizing: border-box
    .textarea
        width: 500px
        border: 1px solid #ccc
        min-height: 46px
        border-radius: 3px
    #chat_input_img
        width: 46px
        height:46px
        border-radius: 23px
        position: absolute
        bottom: 10px
        left: 100px
#chat_content_wrapper
    padding: 60px 100px 70px 100px
    position: relative
    z-index: 0
    .message
        min-height: 50px
        position: relative
        padding-left: 55px
        color: #000
        padding-bottom: 10px
    .message_user_img 
        width: 40px
        position: absolute
        left: 0px
        top: 0px
        border-radius: 20px
    .message_username
        color: inherit
        font-size: 13px
        font-weight: bold
        text-decoration: none
        margin-right: 10px
    .message_time
        color: #bbb
        font-size: 13px
        padding-left: 10p
    .message_text
        margin: 1px 0px 4px
        line-height: 17px
        font-size: 13px