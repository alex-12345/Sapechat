

#feed_params_wrapper 
    width: 280px
    min-height: 100%
    border-right: 1px #eee solid
    box-sizing: border-box
    position:fixed

#feed_params_list 
    height: 100%
    box-sizing: border-box

    h5
        margin: 16px 0 0px
        padding: 5px 30px 10px
        border-bottom: 1px solid #bbb
        font-family: $h_font
        text-transform: uppercase
        font-size: 16px
        color: #333
        &:nth-child(2n)
            margin-top:30px
    .feed_generalized_param
        display: block
        position: relative
        width: 100%
        line-height: 40px
        height: 40px
        box-sizing: border-box
        background: #fafafa
        border-bottom: 1px solid #eee
        color: #0D182C
        text-decoration: none
        font-size: 14px
        font-weight: bold
        img 
            width: 22px
            height: 22px
            left: 35px
            top:9px
            border-radius: 0px
    .active
        background:#5D687C
        color: #fff
        border-bottom: 1px solid #5D687C
    .feed_friend
        display: block
        position: relative
        background: #fafafa
        border-bottom: 1px solid #eee
        width: 100%
        line-height: 50px
        height: 50px
        box-sizing: border-box
        color: #0D182C
        text-decoration: none
        font-size: 14px
        font-weight: bold
        span
            padding-left: 80px
    .active_friend
        background: #5D687C 
        color:#fff 
        border-bottom: #5D687C
    button
        margin: 15px 30px
        box-sizing: border-box
        background: #FAFAFA
        color: #111
        border: 1px solid #eee
        border-radius: 2px
        height: 35px
        width: 220px
        cursor: pointer
        font-weight: bold
        outline: none
        font-family: "Roboto"
        &:hover 
            background: #eee
    a 
        &:hover 
            background: #8C97AB
            color:#fff
            border-bottom: #8C97AB
        img 
            width: 34px
            height: 34px
            position: absolute
            left: 30px
            top: 8px
            border-radius: 18px
        span 
            display: block
            padding-left: 75px


#stream_wrapper
    margin: 0px
    width: 760px
    box-sizing: border-box
    height:auto
    margin-left:280px
    position: relative
    .stream_user_image
        position:absolute
        top:21px
        left:21px
        width:52px
        border-radius:26px
    .textarea
        text-align:left
        width: 100%
        min-height: 52px
        max-height: 200px
        overflow-y: auto
        overflow-x: hidden
        outline: none
        word-wrap: break-word
        border-radius: 2px
        border:1px solid #bbb
        box-sizing:border-box
        padding:10px 10px
        font-family:"Roboto"
        font-size:13px
        background:#fff
        &:empty:not(:focus):before
            content:attr(data-text)
            color: #555
    #posts_wrapper
        display:block
        box-sizing:border-box
        padding:0px 0 20px
        width:100%
    .post_wrapper
        width:100%
        box-sizing:border-box
        margin:0px 0 20px
        position:relative
        padding:10px 20px 0 75px
        border-top:1px solid #eee
    .post_content
        box-sizing:border-box
        padding:5px 10px 0
    .post_user_name
        display: block
        font-size:14px
        font-weight:bold
        text-decoration:none
        color:#191929
    .post_time
        color: #333
	    font-size: 13px

    .post_text
        font-size:14px
        line-height:1.46
        padding-top:10px

#stream_form_wrapper
    display:block
    width:100%
    padding:20px 20px 20px 85px
    box-sizing:border-box
    position:relative
    background:#FAFAFA
    text-align:right
    button
        background:#5D687C
        border: 1px solid #4E596D
        color: #fff
        cursor:pointer
        border-radius:2px
        width:100px
        height:30px
        font-family:"Roboto"
        font-size:14px
        outline:none
        margin-top:10px
        &:hover
	        background:#4E596D


