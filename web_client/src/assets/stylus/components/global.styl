::-ms-clear
    display: none
    width : 0
    height: 0

::-ms-reveal 
    display: none
    width : 0
    height: 0

.active
    display:none

#main-content-wrapper
    position: relative
    z-index: 0
    width: 1040px
    box-sizing: border-box
    min-height: 100vh
    overflow-y: none
    margin: 0 auto
    background-color: #fff
    padding-top: 50px
    .inline 
	    display: inline-block;
	    vertical-align: top;
.textarea
        text-align:left
        width: 100%
        min-height: 52px
        max-height: 200px
        overflow-y: auto
        overflow-x: hidden
        outline: none
        word-wrap: break-word
        border-radius: 2px
        border:1px solid #bbb
        box-sizing:border-box
        padding:10px 10px
        font-family:"Roboto"
        font-size:13px
        background:#fff
        &:empty:not(:focus):before
            content:attr(data-text)
            color: #555
