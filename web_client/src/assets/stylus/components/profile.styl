 #profile_sub_wrapper   
    width: 280px
    min-height: 100%
    border-right: 1px #eee solid
    box-sizing: border-box
    position: fixed
    padding: 20px
    .user_main_img
        width:100%
        border-radius:2px
.add_to_friends, .button
    width: 100%
    margin: 10px 0
    border-radius: 2px
    border: 1px solid #4E596D
    color: #fff
    background: #5D687C
    font-size: 14px
    height: 35px
    font-family: $primary_font
    cursor: pointer
    outline: none
    &:hover
        background:#3F4A5E

#profile_main_wrapper
    margin: 0px
    width: 760px
    box-sizing: border-box
    height: auto
    margin-left: 280px
.user_profile_name
    margin: 15px 20px 10px
    display: block
    font-size: 24px
    font-weight: 400
    border-bottom: 1px solid #eee
    padding-bottom: 5px
.profile_block_info
    margin: 0px 20px
    font-size: 13px
    line-height: 19px
    ul
        margin: 10px 0
        padding-left: 5px
    li
        list-style: none
        margin: 4px 0
        display: block
        width: 100%
        span
            display: block
            width: 620px
            color: #222
    b
        width: 80px
        color: #2A3549
.profile_block_friends
    padding:0 20px 20px
    h5
        margin:20px 3px 10px
        color:#2A3549
        font-size:14px
        padding-bottom:6px
        width:100%
.friend_item
    width: 82px
    text-align: center
    font-size: 13px
    img
        width:60px
        border-radius:30px
        margin-bottom:5px
    a
        color:#222
        text-decoration:none
        &:hover
            text-decoration:underline
.post_filters
    display: block
    border-bottom: 2px solid #ddd
    padding: 5px 20px
    margin-top: 0px
    .post_filter
        font-weight: bold
        font-size: 16px
        text-decoration: none
        color: #333
        border:none
        border-bottom: 2px solid #aaa
        padding: 5px 2px
        margin-right: 10px
        background: none
        cursor: pointer
        &:hover
            color: #1E293D
            border-bottom: 2px solid #1E293D
    .active_filter
	    border-bottom:2px solid #1E293D
#comment_form
    box-sizing: border-box
    position: relative
    padding: 15px 20px 5px 20px
    img
        width: 50px
        position: absolute
    .textarea
        margin-left: 65px
        width: 655px
    .send_post
        width: 100px
        height 30px
    .right_wrapper
        text-align: right 
#stream_post_wrapper
    display: block
    box-sizing: border-box
    padding: 0px 0 20px
    width: 100%
.post_wrapper
    width: 100%;
    box-sizing: border-box;
    margin: 0px 0 20px;
    position: relative;
    padding: 10px 20px 0 75px;
    border-top: 1px solid #eee;
.user_image_post
    position: absolute
    top: 15px
    left: 20px
    width: 50px
    border-radius: 25px
.post_content
    box-sizing: border-box
    padding: 5px 10px 0
    .post_user_name
        display: block
        font-size: 14px
        font-weight: bold
        text-decoration: none
        color: #191929
    .post_time
        color: #333
        font-size: 13px
    .post_text
        font-size: 14px
        line-height: 1.46
        padding-top: 10px

    