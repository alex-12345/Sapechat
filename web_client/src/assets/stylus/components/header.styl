$height = 50px

header
    background: $header_external_bcolor
    height: $height
    box-sizing: border-box
    position: fixed
    z-index: 2
    width: 100%
    font-family: $h_font

    #hidden-area 
        width: $content_width
        margin: 0px auto
        z-index: 1
        position: relative
    
    #hidden-block 
        position: absolute
        z-index: 5
        width: 280px
        box-sizing: border-box
        min-height: 50px
        background: #fff
        padding: 10px 0
        top: 0px;
        left: 0px;
        border: #ccc solid 1px
        border-top: none;
        border-radius: 0 0 3px 3px
    #hidden-profile 
        height: 60px
        width: 100%
        padding: 10px 5px 10px 20px
        box-sizing: border-box
        &:hover 
            background: #F9F9F9

        #me-img 
            width: 40px
            border-radius: 20px
            float: left
            margin-right: 10px
        #hidden-username
            color: #000;
            text-decoration: none
            font-size: 14px
            font-weight: bold
            display: block
            &:hover
                color: $header_external_bcolor

        #hidden-email
            color: #333
            font-size: 13px

    #hidden-list
        a
            display: block
            text-decoration: none
            font-size: 13px
            font-weight: bold
            color: #222
            padding: 5px 10px 5px 0px
            position: relative
            &:hover
                background: #F9F9F9
            
            div
                position: relative
                width: 70px
                height: 13px
                float: left
            img
                position: absolute
                top: 0px
                right: 20px
                height: 18px

    #hidden-version
        padding: 5px 20px
        display: block
        font-size: 13px
        color: #444
        text-align: right
    
    #hidden-alert 
        color: $bold_h_color
        font-size: 14px
        padding: 10px 0
        display: block
        text-align: center
        font-weight: bold

#h-content
    width: $content_width
    height: $height
    margin: 0 auto
    box-sizing: border-box
    position: relative
    background-color: $header_internal_bcolor
    
    a 
        line-height: $height
        display: block
        color: white
        text-decoration: none
        &:hover
            background-color:  $header_hover_bcolor;
            

    #h-logo
        position: relative
        background: none
        width: 280px
        height: $height
        border-right: $header_border_color solid 1px;
        box-sizing:border-box
        &:hover
            background-color:  $header_hover_bcolor;

    #switch 
        position: absolute
        top:15px
        left: 20px
        background: none
        border: none
        outline: none
        cursor: pointer
        
        img
            height: 20px
    
    #logo
        height: $height
        box-sizing: border-box
        font-size: 24px
        position: absolute
        top: 0
        left: 70px
        z-index: 0

    #h-logo, #h-search, #h-links
        display: inline-block
        vertical-align: top

    #h-search 
        position: absolute
        top: 0px
        left: 280px;
        height: $height;
        box-sizing: border-box
        padding: 10px 20px
        .search 
            height: 30px
            background: #fff
            border-radius: 3px
            padding: 3px 3px 3px 10px
            box-sizing: border-box
            
            input[type=search]
                font-family: $primary_font
                font-size: 14px
                height: 24px
                box-sizing: border-box
                border: none
                outline: none
                width: 200px
                background: none
                margin: 0px
                float: left
        button
            background: none
            outline: none
            border: none
            margin: 2px 1px
            cursor: pointer
            img
                height: 18px

    #h-links
        position: absolute;
        top: 0px;
        right: 0px;
        line-height: $height;
        border-left: $header_border_color solid 1px;
        font-size: 14px; 
        a
            color: white
            text-decoration: none
            display: inline-block
            border-right: $header_border_color solid 1px
            padding: 0px 20px
    



