$height = 50px

header
    background: $header_external_bcolor
    height: $height
    box-sizing: border-box
    position: fixed
    z-index: 2
    width: 100%
    font-family: $h_font

#h-content
    width: 1040px
    height: $height
    margin: 0 auto
    box-sizing: border-box
    position: relative
    background-color: $header_internal_bcolor
    
    a 
        line-height: $height
        display: block
        color: white
        text-decoration: none
        &:hover
            background-color:  $header_hover_bcolor;
            

    #h-logo
        position: relative
        background: none
        width: 280px
        height: $height
        border-right: $header_border_color solid 1px;
        &:hover
            background-color:  $header_hover_bcolor;

    #switch 
        position: absolute
        top:15px
        left: 20px
        background: none
        border: none
        outline: none
        cursor: pointer
        
        img
            height: 20px
    
    #logo
        height: $height
        box-sizing: border-box
        font-size: 24px
        position: absolute
        top: 0
        left: 70px
        z-index: 0

    #h-logo, #h-search, #h-links
        display: inline-block
        vertical-align: top

    #h-search 
        position: absolute
        top: 0px
        left: 280px;
        height: $height;
        box-sizing: border-box
        padding: 10px 20px
        .search 
            height: 30px
            background: #fff
            border-radius: 3px
            padding: 3px 3px 3px 10px
            box-sizing: border-box
            
            input[type=search]
                font-family: $primary_font
                font-size: 14px
                height: 24px
                box-sizing: border-box
                border: none
                outline: none
                width: 200px
                background: none
                margin: 0px
                float: left
        button
            background: none
            outline: none
            border: none
            margin: 2px 1px
            cursor: pointer
            img
                height: 18px

    #h-links
        position: absolute;
        top: 0px;
        right: 0px;
        line-height: $height;
        border-left: $header_border_color solid 1px;
        font-size: 14px; 
        a
            color: white
            text-decoration: none
            display: inline-block
            border-right: $header_border_color solid 1px
            padding: 0px 20px
