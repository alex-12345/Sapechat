#people_filters
    width: 280px
    border-right: 1px solid #eee
    height: 100%
    box-sizing: border-box
    padding: 20px
    position: fixed
    h5 
        margin: 0px
        font-family: $h_font
        font-size: 13px
        color: #131E32
        padding: 11px 15px
        border-bottom: 1px solid #5D687C
        text-transform: uppercase
        background: #E8EBED
        border-radius: 2px 2px 0 0
#filter_main_params 
    margin-bottom: 40px
    a
        display: block
        color: #131E32
        font-size: 13px
        text-decoration: none
        font-weight: bold
        border: 1px solid #E6E9EB
        border-top: none
        padding: 12px 5px 12px 20px
        cursor: pointer
    .active
        background: #F1F4F6
        border-radius: 2px
.select_filter
    border: 1px solid #E6E9EB
    border-top: none
    padding: 5px 15px 15px
    .filter_header
        display: block
        color: #3F4A5E
        font-weight: bold
        font-size: 14px
        padding: 5px 0px 5px 0px
    select 
        border-radius: 2px
        padding: 4px
        outline: none
        font-family: $primary_font
        border: 1px solid #ccc
        width: 100%
    input[type=text]
        width: 50px
        padding: 5px 0px
        border-radius: 2px
        font-size: 13px
        font-family: $primary_font
        border: 1px solid #ccc
        text-align: center
        margin-top: 3px
        outline: none
    #space
        padding: 0 10px

#stream_people_wrapper
    //min-height: 100vh
    padding: 20px
    width: 760px
    margin-left: 280px
    box-sizing: border-box
    overflow-y: auto
.peoople_element_wrapper
    display: inline-block
    border: 1px solid #eee
    border-radius: 2px
    width: 345px
    margin: 20px 15px 10px 0
    box-sizing: border-box
    position: relative
    height: 100px
    padding-left: 105px
    .result_people_img
        width: 80px
        position: absolute
        top: 10px
        left: 10px
        border-radius: 40px
    .people_name
        display: block
        margin-top: 10px
        font-family: $primary_font
        font-size: 15px
        font-weight: bold
        color: #3F4A5E
        text-decoration: none
    .people_description
        font-size: 14px
        display: block
        margin-top: 3px
    .add_friend, .friend
        display: block
        background: #E8EBED
        border: #B0B3B5 1px solid
        border-radius: 2px
        width: 135px
        text-align: center
        font-size: 13px
        font-weight: bold
        font-family: $primary_font
        text-decoration: none
        height: 25px
        color: #101B2F
        margin-top: 10px
        cursor: pointer
        &:hover
            color: #fff
            background: #5D687C
            border: 1px solid #4E596D
    .friend
        color: #fff
        background: #5D687C
        border: 1px solid #4E596D
        


#search_form 
    input[type=search]
        outline: none
        font-family: $primary_font
        font-size: 14px
        padding: 10px 0px 10px 10px
        height: 40px
        box-sizing: border-box
        margin: 0px
        width: 670px
        border: #ccc 1px solid
        border-right: none
        border-radius: 2px 0 0 2px
    button
        height: 40px
        width: 40px
        outline: none
        cursor: pointer
        background: #5D687C
        border: 1px solid #4E596D
        border-radius: 0 2px 2px 0
        img 
            height: 20px
            margin: 3px auto

